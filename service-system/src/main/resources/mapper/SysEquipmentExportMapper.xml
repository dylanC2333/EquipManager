<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.equipment.system.mapper.SysEquipmentExportMapper">

    <resultMap id="SysEquipmentExpMap" type="com.equipment.model.system.SysEquipmentExport" autoMapping="true"></resultMap>

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
        id,equipment_name,equipment_id,export_time,employee_export_name,task_id,warehouse_manager_name,remarks
    </sql>

    <select id="selectPage" resultMap="SysEquipmentExpMap">
        select <include refid="columns" />
        from sys_equipment_export
        <where>
            <if test="vo.keyword != null and vo.keyword != ''">
                and (equipment_name like CONCAT('%',#{vo.keyword},'%') or  equipment_id like CONCAT('%',#{vo.keyword},'%') or task_id like CONCAT('%',#{vo.keyword},'%'))
            </if>
            <if test="vo.startTime != null and vo.startTime != ''">
                and export_time >= #{vo.startTime}
            </if>
            <if test="vo.endTime != null and vo.endTime != ''">
                and export_time &lt;= #{vo.endTime}
            </if>
        </where>
        order by id desc
    </select>

</mapper>
