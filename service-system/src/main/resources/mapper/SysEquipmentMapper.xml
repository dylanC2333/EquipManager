<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.equipment.system.mapper.SysEquipmentMapper">

    <resultMap id="BaseResultMap" type="com.equipment.model.system.SysEquipment">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="equipmentCode" column="equipment_code" jdbcType="VARCHAR"/>
            <result property="equipmentName" column="equipment_name" jdbcType="VARCHAR"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,equipment_code,equipment_name,
        create_time,update_time,is_deleted
    </sql>

    <resultMap id="EquipmentUseDaysCountMap" type="com.equipment.model.vo.EquipmentUseDayCount"></resultMap>
    <select id="EquipmentUseDaysCount_Mapper" resultMap="EquipmentUseDaysCountMap">
        SELECT e.equipment_name as equipmentName, e.equipment_code as equipmentCode, COUNT(DISTINCT u.equipment_use_date) AS useDayCount
        FROM sys_equipment e
        LEFT JOIN sys_equipment_use u ON e.equipment_code = u.equipment_code
        <where>
            e.is_deleted = 0 AND (u.is_deleted is NULL OR u.is_deleted = 0)
            <if test="CountEquipmentUseDaysVo.keyword != null and CountEquipmentUseDaysVo.keyword != ''">
                and (e.equipment_code = #{CountEquipmentUseDaysVo.keyword})
            </if>
            <if test="CountEquipmentUseDaysVo.start != null and CountEquipmentUseDaysVo.start != ''">
                and (u.equipment_use_date >= #{CountEquipmentUseDaysVo.start})
            </if>
            <if test="CountEquipmentUseDaysVo.end != null and CountEquipmentUseDaysVo.end != ''">
                and (u.equipment_use_date &lt;= #{CountEquipmentUseDaysVo.end})
            </if>
        </where>
        GROUP BY e.equipment_name, e.equipment_code
        ORDER BY useDayCount DESC
    </select>
</mapper>
