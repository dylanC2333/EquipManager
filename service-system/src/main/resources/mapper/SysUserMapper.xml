<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.equipment.system.mapper.SysUserMapper">

    <resultMap id="BaseResultMap" type="com.equipment.model.system.SysUser">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userCode" column="user_code" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="userName" column="user_name" jdbcType="VARCHAR"/>
            <result property="phone" column="phone" jdbcType="VARCHAR"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_code,password,
        user_name,phone,description,
        status,create_time,update_time,
        is_deleted
    </sql>

    <select id="getUserListByRoleName" resultMap="BaseResultMap">
        select * from sys_user u
                          inner join sys_user_role ur on ur.user_id = u.id
                          inner join sys_role r on r.id = ur.role_id
        where
            r.role_name = #{roleName}
          and u.is_deleted = 0
          and ur.is_deleted = 0
          and r.is_deleted = 0
        order by convert(u.user_name using gbk) asc;
    </select>

    <resultMap id="SysDetectionMap" type="com.equipment.model.system.SysUser"  autoMapping="true"></resultMap>

    <select id="idleEmployees" resultMap="SysDetectionMap">
        SELECT
            u.id,
            u.user_name AS userName,
            u.user_code AS userCode
            -- 您可以根据需要选择返回 sys_user 的更多字段
        FROM
            sys_user u
        <where>
            u.is_deleted = 0
            <!-- 条件1：只考虑在查询开始时间之前就已创建的用户 -->
            <if test="detVo.startTime != null and detVo.startTime != ''">
                AND u.create_time &lt;= #{detVo.startTime}
            </if>

            <!-- 条件2：该用户在指定时间段内，不存在任何检测记录 -->
            AND NOT EXISTS (
            SELECT 1
            FROM sys_detection d
            WHERE d.employee_code = u.user_code
            AND d.is_deleted = 0
            <!-- 动态构建时间范围 -->
            <if test="detVo.startTime != null and detVo.startTime != ''">
                AND d.start_date >= #{detVo.startTime}
            </if>
            <if test="detVo.endTime != null and detVo.endTime != ''">
                AND d.start_date &lt;= #{detVo.endTime}
            </if>
            )
            <!-- 筛选包含指定证书类别的用户 -->
            <if test="detVo.certificateClassId != null">
                AND EXISTS (
                SELECT 1
                FROM sys_user_certificate suc
                WHERE suc.user_id = u.id
                AND suc.class_id = #{detVo.certificateClassId}
                AND suc.is_deleted = 0
                )
            </if>
        </where>
    </select>



</mapper>
