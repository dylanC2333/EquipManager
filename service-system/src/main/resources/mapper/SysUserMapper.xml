<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.equipment.system.mapper.SysUserMapper">

    <resultMap id="sysUserMap" type="com.equipment.model.system.SysUser" autoMapping="true">
    </resultMap>

    <resultMap id="BaseResultMap" type="com.equipment.model.system.SysUser">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="username" column="username" jdbcType="VARCHAR"/>
            <result property="password" column="password" jdbcType="VARCHAR"/>
            <result property="name" column="name" jdbcType="VARCHAR"/>
            <result property="phone" column="phone" jdbcType="VARCHAR"/>
            <result property="headUrl" column="head_url" jdbcType="VARCHAR"/>
            <result property="deptId" column="dept_id" jdbcType="BIGINT"/>
            <result property="postId" column="post_id" jdbcType="BIGINT"/>
            <result property="description" column="description" jdbcType="VARCHAR"/>
            <result property="status" column="status" jdbcType="TINYINT"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
            <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
            <result property="isDeleted" column="is_deleted" jdbcType="TINYINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,username,password,
        name,phone,head_url,
        dept_id,post_id,description,
        status,create_time,update_time,
        is_deleted
    </sql>
    
    <select id="getUserListByRoleName" resultMap="sysUserMap">
        select * from sys_user u
                          inner join sys_user_role ur on ur.user_id = u.id
                          inner join sys_role r on r.id = ur.role_id
        where
            r.role_name = #{roleName}
          and u.is_deleted = 0
          and ur.is_deleted = 0
          and r.is_deleted = 0
        order by convert(u.name using gbk) asc;
    </select>

</mapper>
